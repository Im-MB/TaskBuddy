@page
@using Test.Areas.Identity.Pages.Account.Manage
@model ProfileChangeModel
@{
    ViewData["Title"] = "Manage Profile";
    ViewData["ActivePage"] = ManageNavPages.ProfileChange;
}

<div class="">
    <div class="">
        <div class="">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div style="width: 130px; height: 130px;margin-left:130px;margin-bottom:40px;" class="d-flex align-items-center">
                @if (Model.Input.Profil is not null)
                    {
                        <img id="Profil" style="width:100%;height:auto;border-radius:50%;border: 2px solid #3A3882;" alt="Profil" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.Profil))" />
                    }
                    else{
                        <img id="Profil" style="width:100%;height:auto;border-radius:50%;border: 2px solid #3A3882;" alt="Profil" src="~/uploads/avatar-male.jpg" />
                    }
                    <div class="custom-file" style="margin-left: 50px;">
                        <input type="file" accept="image/*" asp-for="Input.Profil"
                               onchange="document.getElementById('Profil').src = window.URL.createObjectURL(this.file[0])"
                               class="custom-file-input input_focus" style="font-family: Poppins;font-size: 15px;font-style: normal;font-weight: 700;line-height: normal;" />
                        <label class="custom-file-label" asp-for="Input.Profil" style="font-family: Poppins;font-size: 15px;font-style: normal;font-weight: 700;line-height: normal;"></label>
                        <span asp-validation-for="Input.Profil" class="text-danger"></span>
                    </div> 
                </div>
                <div class="couples">
                    <div class="form-floating" style="width: 40%;">
                        <input asp-for="Username" class="form-control input_change input_focus" placeholder="Please choose your Photo." Disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating " style="width: 40%;">
                        <input asp-for="Input.Nom" class="form-control input_change input_focus" placeholder="Please choose your Nom." />
                        <label asp-for="Input.Nom" class="form-label"></label>
                        <span asp-validation-for="Input.Nom" class="text-danger"></span>
                    </div>
                </div>
                <div class="couples">
                    <div class="form-floating " style="width: 40%;">
                        <input asp-for="Input.Prenom" class="form-control input_change input_focus" placeholder="Please enter your Prenom." />
                        <label asp-for="Input.Prenom" class="form-label"></label>
                        <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                    </div>
                    <div class="form-floating " style="width: 40%;">
                        <input asp-for="Input.Adresse" class="form-control input_change input_focus" placeholder="Please enter your Adresse." />
                        <label asp-for="Input.Adresse" class="form-label"></label>
                        <span asp-validation-for="Input.Adresse" class="text-danger"></span>
                    </div>
                 </div>
                <div class="couples">
                    <div class="form-floating " style="width: 40%;">
                            <input asp-for="Input.Ville" class="form-control input_change input_focus" placeholder="Please enter your Ville." />
                            <label asp-for="Input.Ville" class="form-label"></label>
                            <span asp-validation-for="Input.Ville" class="text-danger"></span>
                        
                    </div>
                    <div class="form-floating " style="width: 40%;">
                        <input asp-for="Input.Tel" class="form-control input_change input_focus" placeholder="Please enter your Tel." />
                        <label asp-for="Input.Tel" class="form-label"></label>
                        <span asp-validation-for="Input.Tel" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-floating " style="width: 40%;display:none;" >
                    <input asp-for="Input.Role" class="form-control input_change input_focus" placeholder="Please enter your Role."  />
                    <label asp-for="Input.Role" class="form-label"></label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>


                <div style="text-align:center;">
                    <button id="update-profile-button" type="submit" class=" btn " style="background: #7D4FFE;
                    color: white;
                    border-radius: 25px;
                    width: 160px;
                    height: 56px;
                    font-size: 28px;">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

