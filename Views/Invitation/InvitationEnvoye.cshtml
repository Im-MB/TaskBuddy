@model List<Invitation>


@if (Model.Count == 0)
{
    <div class="listeAmi row" style="height:100vh;">
        <div class="col-6">
            <h1 style="color: #3A3882;
                font-family: Poppins;
                font-size: 55px;
                font-style: normal;
                font-weight: 600;
                line-height: 52px;
                margin-top: 140px;
                text-align: center;
                margin-bottom: 64px;">
                You didn't sent any invitations yet.
            </h1>
            <p style="color: #494949;
                font-family: Poppins;
                font-size: 36px;
                font-style: normal;
                font-weight: 400;
                line-height: 52px;text-align: center;">
                Want to make new friends? <a class="nav-link " asp-area="" asp-controller="Utilisateur" asp-action="search" style="color: #7D4FFE; font-weight:600;">Click here</a> to get started!
            </p>
        </div>
        <div class="col-6">
            <img src="~/assests/noInvitation.png" />
        </div>

    </div>
}
else
{
    <div class="listeAmi row" style="height:100vh;">
        @using (Html.BeginForm("InvitationEnvoye", "Invitation", FormMethod.Get, new { @class = "user_header" }))
        {
            <div class="dash_search_container">
                @Html.TextBox("nameSearch", null, new { @class = "dash_input", placeholder = "Search..." })
                <button class="dash_icon" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        }

        <div class="listeUserContainer" style="border-radius: 25px;background: #FFF;height:90%;padding-left:25px;">
            <table class="table">
                <thead>
                    <tr>
                        <th style="border-bottom:none;padding-bottom: 20px;">Nom</th>
                        <th style="border-bottom:none;padding-bottom: 20px;">Destinataire</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invitation in Model)
                    {
                        <tr>
                            <td class="td_tache" style="border-bottom:none;">@invitation.Destinataire.Nom</td>
                            <td class="td_tache" style="border-bottom:none;">@invitation.Destinataire.UserName</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

