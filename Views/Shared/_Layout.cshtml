@using Microsoft.AspNetCore.Identity
@inject SignInManager<Utilisateur> SignInManager
@inject UserManager<Utilisateur> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css"  />
    <link rel="stylesheet" href="~/TaskBuddy.styles.css" asp-append-version="true" />
</head>


<body>
    @if (!SignInManager.IsSignedIn(User))
    {
        <header>
            <div style="width: 100%; position: sticky">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
                    <div class="container-fluid">
                        
                        <div class="logo" style="margin-left: 208px;"><span>TaskBuddy</span></div>
                        <ul style="list-style:none;text-align:center;width:100%;padding:0;margin:0;">
                            <li class="title layout_focus">Home</li>
                            <li class="title">About Us</li>
                            <li class="title">Contact Us</li>
                        </ul>
                        <div class="login" style="margin-right: 200px;"><partial name="_LoginPartial" /></div>
                    </div>
                </nav>
            </div>
        </header>
    }
    else
    {
        <!--Left SideBar-->
        <div  class="leftsidenav">
            <a href="#">About</a>
            <a href="#">Services</a>
            <a href="#">Clients</a>
            <a href="#">Contact</a>
            @if (UserManager.GetUserAsync(User).Result.Role == "admin")
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="Utilisateur" asp-action="ListeUtilisateur">user</a> 
            }
        </div>
        <!--Right SideBar-->
        <div class="rightsidenav">
            <partial name="_LoginPartial" />
        </div>
        
    }
            <main role="main">
                @RenderBody()
            </main>
        

    @if (!SignInManager.IsSignedIn(User))
    {
        <footer class="border-top footer text-muted">
            <div class="container">
            &copy; 2023 - TaskBuddy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
